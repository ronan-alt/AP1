<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AP1.Vues.AcceuilClassementEleve"
             Title="Classement en longueur"
             BackgroundColor="#F5F5F5">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Titre -->
            <Label Text="Classement en Longueur"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="#1E1E1E"
                   Margin="0,20,0,10"/>

            <!-- Liste des classements -->
            <CollectionView x:Name="ClassementCollectionView"
                            ItemsSource="{Binding ClassementList}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame CornerRadius="15"
                               HasShadow="True"
                               BackgroundColor="White"
                               Padding="15"
                               Margin="0,5">
                            <Grid ColumnDefinitions="auto, *, auto"
                                  VerticalOptions="Center">

                                <!-- Rang (1er, 2e, 3e, etc.) -->
                                <Label Text="{Binding Rang}"
                                       FontAttributes="Bold"
                                       FontSize="22"
                                       TextColor="#0078D7"
                                       VerticalOptions="Center"
                                       Margin="5,0"/>
                                <!-- Distance -->
                                <Label Grid.Column="2"
                                       Text="{Binding Distance, StringFormat='{0} m'}"
                                       FontAttributes="Bold"
                                       FontSize="18"
                                       TextColor="#333"
                                       VerticalOptions="Center"
                                       Margin="10,0"/>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
